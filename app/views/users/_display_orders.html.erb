<!-- TODO: put paginated orders here in a tabular fashion -->
  <% unless @user.orders.empty? %>
    <table class = "table table-striped table-bordered">
      <thead>
        <tr>
          <th>Id</th>
          <th>User</th>
          <th>ETA</th>
          <th>Entered</th>
          <th>Last Edited</th>
        </tr>
      </thead>
      <tbody>
      <% @user.orders.each do |order| %>
        <tr>
          <% order.attributes.each do |attr_name, attr_value| %>
            <td><%= attr_value %></td>
          <% end %>
        </tr>
      </tbody>
      <% end %>
    </table>
  <% else %>
    <p>No orders to display.</p>
  <% end %>