<% require 'gchart' %>

<% provide(:title, 'Statistics') %>
<div class="row">
<%= render 'shared/sidebar' %>
<h1>Statistics</h1>
<div class="span8">
<p class="center">This month saw a total of <%= pluralize(current_user.total_books_for_this_month, 'books') %> ordered!</p>
</br>
<img src="<%= Gchart.pie(
	:data => @data.values,
	:labels => @data.keys,
	:size => '600x200'
	) %>"></img></br></br>
<h2>Order breakdown</h2>
<table class="table table-condensed">
	<thead>
		<th>Genre</th>
		<th>Quantity</th>
	</thead>
	<tbody>
		<% @data.each do |genre, quantity| %>
		<tr>
			<td><%= genre %></td>
			<td><%= quantity %></td>
		</tr>
		<% end %>
	</tbody>
</table>
</div>
</div>