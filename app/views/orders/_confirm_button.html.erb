<!-- Form with one hidden field and a submit button to confirm that an order has been completed --> 
<% if !order.completed? %>
  <%= link_to '#', class: "btn btn-mini btn-success" do %>
    <i class="icon-check icon-white" id="Confirm"></i>
  <% end %>
<% else %>
  <%= link_to '#', class: "btn btn-mini btn-warning" do %>
    <i class="icon-remove-sign icon-white" id="Confirm"></i>
  <% end %>
<% end %>